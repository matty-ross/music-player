<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <title>Playlists</title>

        <!-- Bootstrap -->
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"></script>
        <!-- -->

        <!-- SweetAlert2 -->
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
        <!-- -->

        <script type="importmap">
            <%- include('../importmap.json') %>
        </script>

        <script type="module" src="/application.js"></script>
    </head>
    <body>
        <div class="container">
            <div data-controller="playlist">
                <h1 class="mt-3">Playlists</h1>
                
                <div class="d-flex gap-3 my-4">
                    <button
                        class="btn btn-outline-primary"
                        type="button"
                        data-action="click->playlist#create"
                    >
                        <i class="bi bi-plus"></i>
                    </button>
                    <input
                        class="form-control w-auto"
                        type="text"
                        placeholder="filter..."
                        size="30"
                        data-action="change->playlist#filterTable"
                    >
                </div>
                
                <div
                    class="text-center mt-5"
                    data-playlist-target="loading"
                >
                    <div class="spinner-border"></div>
                </div>
                
                <div data-playlist-target="form"></div>
                <div data-playlist-target="table"></div>

                <div class="toast-container position-absolute bottom-0 py-3">
                    <div
                        class="toast text-bg-success"
                        data-playlist-target="toast"
                    >
                        <div class="toast-body"></div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>